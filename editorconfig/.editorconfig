# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.txt]
indent_size = 2
indent_style = tab
max_line_length = 80

[*.go]
indent_size = 8
indent_style = tab

[*.{js,json}]
indent_size = 4
indent_style = space

[*.md]
indent_size = 2
indent_style = space

[*.py]
indent_size = 2
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0
max_line_length = 72

[EDIT_DESCRIPTION]
max_line_length = 0
max_line_length = 72

[makefile]
indent_size = 2
indent_style = tab
