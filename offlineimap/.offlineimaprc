[general]
accounts   = bearden,royaljay
pythonfile = ~/.offlineimap.py
ui         = ttyui

[Account bearden]
localrepository  = bearden-local
remoterepository = bearden-remote

[Repository bearden-local]
type         = Maildir
localfolders = ~/.mail/bearden.io
nametrans    = forward_nametrans

[Repository bearden-remote]
