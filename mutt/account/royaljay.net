mailboxes +royaljay.net/INBOX

set from = "jacob.bearden@royaljay.net"
set mbox = "+royaljay.net/archive"
set postponed = "+royaljay.net/drafts"
set spoolfile = "+royaljay.net/INBOX"

set sendmail="/usr/local/bin/msmtp -a royaljay.net"

set header_cache="~/.mail/cache/royaljay.net/header"
set message_cachedir="~/.mail/cache/royaljay.net/message"

macro index ga "<change-folder>=royaljay.net/archive<enter>" "Go to all mail"
macro index gd "<change-folder>=royaljay.net/drafts<enter>" "Go to drafts"
macro index gi "<change-folder>=royaljay.net/INBOX<enter>" "Go to inbox"
macro index gs "<change-folder>=royaljay.net/[Gmail].Starred<enter>" "Go to starred"
macro index gt "<change-folder>=royaljay.net/trash<enter>" "Go to trash"
macro index,pager e "<save-message>=royaljay.net/archive<enter>" "Archive"
macro index,pager d "<save-message>=royaljay.net/trash<enter>" "Trash"