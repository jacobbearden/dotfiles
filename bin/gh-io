#!/usr/bin/env bash
#
# gh-io - shortens URLs using https://git.io.

main() {
  for url in "$@"; do
    LOCATION="$(
      curl -i https://git.io -F "url=$url" 2>/dev/null \
        | grep Location
    )"

    if [ -z "$LOCATION" ]; then
      echo >&2 "Unable to shorten '$url'."
      exit 1
    fi

    echo $LOCATION | awk '{ print $2 }'
  done
}

main;